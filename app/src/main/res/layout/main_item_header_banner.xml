<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="80dp"
    >
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginStart="10dp"
            android:id="@+id/main_item_header_banner_start"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/main_item_header_banner_start_title"
                android:textSize="16sp"
                android:textColor="#f00"
                android:text="超豪华大奖"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:background="@drawable/btn_weight_normal"
                android:textColor="#f00"
                android:text="超豪华大奖"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>
        <ImageView
            android:src="@drawable/square1"
            android:layout_toEndOf="@+id/main_item_header_banner_start"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_width="65dp"
            android:layout_height="65dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginStart="10dp"
            android:id="@+id/main_item_header_banner_end"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/main_item_header_banner_end_title"
                android:textSize="16sp"
                android:textColor="#f00"
                android:text="倒计时开始"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:gravity="center"
                android:background="@drawable/btn_weight_normal"
                android:textColor="#f00"
                android:text="再晚就没有了"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>
        <ImageView
            android:src="@drawable/square2"
            android:layout_toEndOf="@+id/main_item_header_banner_end"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_width="65dp"
            android:layout_height="65dp" />
    </RelativeLayout>
</LinearLayout>
