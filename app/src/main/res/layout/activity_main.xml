<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.pylogy.com.mygroupen.activity.MainActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:background="#FF6633"
        android:layout_height="63dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar_wrap"
            toolbar:popupTheme="@style/OverflowMenuStyle"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/main_iv_arrow"
                    android:src="@drawable/title_home_arrow_down_normal"
                    android:layout_gravity="center_vertical"
                    android:layout_width="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="10dp" />
                <TextView
                    android:id="@+id/main_tv_cityname"
                    android:layout_gravity="center_vertical"
                    android:text="广州"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_search_bar"
                    android:layout_height="30dp">
                    <ImageView
                        android:src="@drawable/navibar_icon_search"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:text="输入商户名、地点"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/main_pullrefresh_wrap"
        android:layout_above="@+id/main_rg_wrap"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
    </com.handmark.pulltorefresh.library.PullToRefreshListView>
    <RadioGroup
        android:id="@+id/main_rg_wrap"
        android:paddingTop="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <RadioButton
            android:drawableTop="@drawable/selector_main_index_home"
            android:button="@null"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="首页"
            android:textSize="9sp"
            android:drawablePadding="3dp"
            android:textColor="@color/color_main_index"
            android:layout_height="match_parent" />
        <RadioButton
            android:drawableTop="@drawable/selector_main_index_tuan"
            android:button="@null"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="团惠团购"
            android:textSize="9sp"
            android:drawablePadding="3dp"
            android:textColor="@color/color_main_index"
            android:layout_height="match_parent" />
        <RadioButton
            android:drawableTop="@drawable/selector_main_index_search"
            android:button="@null"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="发现"
            android:textSize="9sp"
            android:drawablePadding="3dp"
            android:textColor="@color/color_main_index"
            android:layout_height="match_parent" />
        <RadioButton
            android:drawableTop="@drawable/selector_main_index_my"
            android:button="@null"
            android:gravity="center"
            android:layout_weight="1"
            android:text="我的"
            android:textSize="9sp"
            android:drawablePadding="3dp"
            android:textColor="@color/color_main_index"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </RadioGroup>
</LinearLayout>
